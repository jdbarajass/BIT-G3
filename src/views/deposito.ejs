<%- include('header.ejs') %>
    <%- include('sidebar.ejs') %>

        <section>
            <link rel="stylesheet" href="/formadeposito.css">

            <% if(nuevo==true){ %>

                <div class="detalledeposito">
                    <p><strong> Detalles Del Depósito</strong></p>
                </div>
                <br>
                <br>
                <br>
                <form class="formas4" action="/nuevodeposito" method="post">
                    <label class="mediodepago">Medio De Pago:</label>
                    <br>

                    <select class="bancos" name="banco">
                        <option value="0"></option>
                        <option value="1001">Bancolombia</option>
                        <option value="2002">Davivienda</option>
                        <option value="3003">BBVA</option>
                    </select>
                    <br>
                    <br>
                    <br>
                    <input type="hidden" name="usuarioId" value="<%= usuarioId %>">
                    <label class="mediodepago">Monto A Depósitar:</label>
                    <br>
                    <br>
                    <input class="bancos3" type="number" placeholder="Ingrese el monto" name="monto">
                    <br>
                    <br>
                    <br>
                    <button class="boton89" type="submit"><strong> Guardar</strong></button>

                </form>

                <% }else{ %>
                    <h3>Modificar Reserva</h3>

                    <form action="/modificar" method="post">
                        <input type="hidden" name="id" value="<%= res._id %>">
                        <label>Cliente</label>
                        <select name="banco">
                            <option <%=(res.banco==1001)? "selected" :"" %> value="1001">Juan Perez</option>
                            <option <%=(res.banco==2002)? "selected" :"" %> value="2002">María Lanteni</option>
                            <option <%=(res.banco==3003)? "selected" :"" %> value="3003">Agustina Robledo</option>
                            <option <%=(res.banco==4004)? "selected" :"" %> value="4004">Pepe Quiroz</option>
                        </select>
                        <br>
                        <label>Fecha</label>
                        <input type="date" name="fecha" placeholder="Ingrese la fecha" value="<%= res.fecha %>">
                        <br>
                        <label>Auto</label>
                        <select name="auto">
                            <option <%=(res.auto=="Tesla Modelo S" )? "selected" :"" %> value="Tesla Modelo S">Tesla
                                Modelo S</option>
                            <option <%=(res.auto=="Ford Fiesta 1.6" )? "selected" :"" %> value="Ford Fiesta 1.6">Ford
                                Fiesta 1.6</option>
                            <option <%=(res.auto=="Chevrolet Tracker" )? "selected" :"" %> value="Chevrolet
                                Tracker">Chevrolet Tracker</option>
                        </select>
                        <br>
                        <label>Ubicación</label>
                        <textarea name="locacion" cols="30" rows="10"><%= res.locacion %></textarea>
                        <br>
                        <br>
                        <button type="submit">Guardar</button>

                    </form>

                    <% } %>
        </section>
        <%- include('footer.ejs') %>